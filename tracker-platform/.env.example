# Application Environment
APP_ENVIRONMENT=development

# Server Configuration
APP__SERVER__HOST=0.0.0.0
APP__SERVER__PORT=8080
APP__SERVER__GRACEFUL_SHUTDOWN_TIMEOUT_SECS=30

# Database Configuration
APP__DATABASE__URL=postgresql://tracker:tracker_password@localhost:5432/tracker
APP__DATABASE__MAX_CONNECTIONS=20
APP__DATABASE__MIN_CONNECTIONS=2
APP__DATABASE__CONNECT_TIMEOUT_SECS=30
APP__DATABASE__IDLE_TIMEOUT_SECS=600
APP__DATABASE__MAX_LIFETIME_SECS=1800
APP__DATABASE__RUN_MIGRATIONS=false

# Redis Configuration
APP__REDIS__URL=redis://:redis_password@localhost:6379
APP__REDIS__CONNECTION_TIMEOUT_SECS=10
APP__REDIS__RESPONSE_TIMEOUT_SECS=5

# Meilisearch Configuration
APP__MEILISEARCH__URL=http://localhost:7700
APP__MEILISEARCH__API_KEY=masterKey123456789
APP__MEILISEARCH__TIMEOUT_SECS=30

# Kafka Configuration (Optional)
# APP__KAFKA__BROKERS=localhost:9092
# APP__KAFKA__GROUP_ID=tracker-platform
# APP__KAFKA__TOPICS__TORRENT_EVENTS=torrent-events
# APP__KAFKA__TOPICS__USER_EVENTS=user-events
# APP__KAFKA__TOPICS__PEER_EVENTS=peer-events

# Authentication Configuration
# IMPORTANT: Change this in production! Must be at least 32 characters
APP__AUTH__JWT_SECRET=change-me-in-production-min-32-characters-long-secret-key
APP__AUTH__JWT_EXPIRATION_HOURS=24
APP__AUTH__REFRESH_TOKEN_EXPIRATION_DAYS=30
APP__AUTH__PASSWORD_RESET_EXPIRATION_HOURS=1
APP__AUTH__EMAIL_VERIFICATION_EXPIRATION_HOURS=24
APP__AUTH__MAX_LOGIN_ATTEMPTS=5
APP__AUTH__LOCKOUT_DURATION_MINUTES=15

# Storage Configuration
APP__STORAGE__UPLOAD_DIR=/tmp/uploads
APP__STORAGE__MAX_UPLOAD_SIZE_MB=100
APP__STORAGE__ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp

# Telemetry Configuration
APP__TELEMETRY__SERVICE_NAME=tracker-platform
APP__TELEMETRY__ENVIRONMENT=development
APP__TELEMETRY__LOG_LEVEL=info
APP__TELEMETRY__LOG_FORMAT=pretty
APP__TELEMETRY__METRICS_ENABLED=true
APP__TELEMETRY__METRICS_PORT=9090
# APP__TELEMETRY__OTLP_ENDPOINT=http://localhost:4317

# CORS Configuration
APP__CORS__ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
APP__CORS__ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
APP__CORS__ALLOWED_HEADERS=Content-Type,Authorization,X-Request-ID
APP__CORS__MAX_AGE_SECS=3600

# Rate Limiting Configuration
APP__RATE_LIMIT__ENABLED=true
APP__RATE_LIMIT__REQUESTS_PER_SECOND=100
APP__RATE_LIMIT__BURST_SIZE=200

# Docker Compose Variables
# Meilisearch
MEILI_MASTER_KEY=masterKey123456789
MEILI_ENV=development
MEILI_NO_ANALYTICS=true

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_PLUGINS=

# General
RUN_MIGRATIONS=true
LOG_LEVEL=info
LOG_FORMAT=pretty
JWT_SECRET=change-me-in-production-min-32-characters-long-secret-key
OTLP_ENDPOINT=
